---

import '../layouts/index.css';

import Navbar from '../components/navbar/navbar.astro';
import Footer from '../components/footer.astro';
import ThemeSelector from '../components/themeselector.astro';
import LanguageSelector from '../components/languageselector.astro';


import { getLangFromUrl, useTranslations } from '../i18n/utils';

const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);


let t;
try {
  t = useTranslations(lang);
} catch (e) {
  console.warn('i18n init failed:', e);
  t = (key: string) => key;
}

// Props with safe fallbacks
const {
  title = t('site.title') ?? 'MusicallyDown - Download TikTok Videos Without Watermark in Seconds',
  description = t('site.description') ?? 'MusicalDown is a powerful TikTok downloader that lets you Save TikTok videos without watermark in HD quality. MusicallyDown - Download TikTok videos in MP4 format',
  keywords = t('site.keywords') ?? 'musical down, Musicallydown, Musicaldown, TikTokio, TikTok video downloader online, download TikTok video, Unlimited TikTok downloads, free TikTok downloader, save TikTok videos, TikTok downloader online',
  // You can override per page if needed, otherwise defaults to the big OG image
  image = 'meta/opengraph.webp', 
  ogType = 'website',
  variant = 'default',
} = Astro.props;

// ─── Build absolute URLs safely ──────────────────────────────────────────────
const siteUrl = Astro.site ? Astro.site.toString().replace(/\/$/, '') : '';
const canonicalUrl = Astro.url.href;
const ogImageUrl = `${siteUrl}/${image.replace(/^\/+/, '')}`; // removes leading slash if any
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Basic SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Canonical -->
	<link rel="canonical" href={Astro.url.href} />

	<link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site)} />
    <link rel="alternate" hreflang="en" href={new URL('/', Astro.site)} />
    <link rel="alternate" hreflang="vi-vn" href={new URL('/vi', Astro.site)} />
    <link rel="alternate" hreflang="id-id" href={new URL('/id', Astro.site)} />
    <link rel="alternate" hreflang="ms-my" href={new URL('/ms', Astro.site)} />
	
	
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />                
    <meta property="og:site_name" content="MusicalDown" />              
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : `${lang}_${lang.toUpperCase()}`} />
    
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content="1200" />                 
    <meta property="og:image:height" content="630" />                
    <!-- Optional but nice for some platforms -->
    <meta property="og:image:type" content="image/webp" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Favicons -->
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.webp" />

	<script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=693b7cfd7d1fcb1f4b611473&product=sop' async='async'></script>
  </head>

  <body class="antialiased">
    <Navbar variant={variant} lang={lang} />

    <main class="min-h-[calc(100vh-200px)]">

      <slot name="hero" />
      <slot name="features" />
      <slot />
    </main>

    <Footer lang={lang} />

		<script src="/src/pwa.ts"></script>

  </body>
</html>
