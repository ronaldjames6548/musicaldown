---
import '../layouts/index.css';
import Navbar from '../components/navbar/navbar.astro';
import Footer from '../components/footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
let t;
try {
  t = useTranslations(lang);
} catch (e) {
  t = (key: string) => key;
}

const {
  title = t('site.title'),
  description = t('site.description'),
  keywords = t('site.keywords'),
  image = '/meta/opengraph.webp',
  variant = 'default',
} = Astro.props;

const siteUrl = Astro.site?.origin || 'https://musicaldown.online';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const ogImageUrl = new URL(image, siteUrl);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <link rel="canonical" href={canonicalUrl} />
    
    <!-- SEO Hreflang Tags -->
    <link rel="alternate" hreflang="x-default" href={siteUrl} />
    <link rel="alternate" hreflang="en" href={siteUrl} />
    <link rel="alternate" hreflang="vi" href={`${siteUrl}/vi`} />
    <link rel="alternate" hreflang="id" href={`${siteUrl}/id`} />
    <link rel="alternate" hreflang="ms" href={`${siteUrl}/ms`} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <script src="https://analytics.ahrefs.com/analytics.js" data-key="VdJI8K+9fFQ9pLM517exGw" async></script>
  </head>
  <body class="antialiased">
    <Navbar variant={variant} lang={lang} />
    <main class="min-h-[calc(100vh-200px)]">
      <slot />
    </main>
    <Footer lang={lang} />
    <script src="/src/pwa.ts"></script>
  </body>
</html>