---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/md-hero.astro";
import Container from "@components/container.astro"; 
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

// CRITICAL: Set 404 status to prevent redirect loops
Astro.response.status = 404;

// Get current language and create translation function
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);

// Helper function to create localized paths
function localizePath(path: string) {
	if (!path || (path && path.startsWith('http')) || path === '#') return path;
	return getRelativeLocaleUrl(lang, path);
}

// SEO/props for Indonesian
const title = 'Kesalahan 404 - MusicallyDown - Unduh video TikTok tanpa watermark dalam hitungan detik';
const description = 'Ups! Halaman ini telah mengalami petualangan yang tidak terduga. Sepertinya Anda mencoba mengakses halaman yang tidak ada (atau telah dipindahkan).';
const image = 'meta/opengraph.webp';
const variant = '404';
---

<Layout title={title} description={description} image={image} variant={variant} lang={lang}>
<Hero />

	<Container>
		<section class="flex items-center h-full p-16">
			<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
				<div class="max-w-md text-center">
					
					<h2 class="mb-8 font-bold text-9xl">
						<span class="sr-only">Kesalahan</span>
						<span class="text-primary">404</span>
					</h2>
					<p class="text-3xl font-semibold md:text-3xl">Maaf, kami tidak dapat menemukan halaman ini.</p>
					<p class="mt-4 mb-8 text-lg text-muted">Tapi jangan khawatir, Anda dapat menemukan banyak hal lain di beranda kami.</p>
					<a rel="noopener noreferrer" href={localizePath("/")} class="btn ml-4">Kembali ke beranda</a>
				</div>
			</div>
		</section>
	</Container>
</Layout>